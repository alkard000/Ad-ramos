mixin crearramo(proyecto = {})
    form.agregar-proyecto(action = `/nuevo-ramo/${proyecto.id || ''}` method = "POST")
        .campo
            label(for="nombre") Nombre Ramo:
            input(value=proyecto.nombre type="text" id = "nombre" name = "nombre" placeholder = "Indica el nombre")
        .campo.enviar
            input(type="submit" value = `${proyecto.nombre ? 'Guardar' : 'Agregar'}` class = "boton")