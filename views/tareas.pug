extends layout

block contenido
    .contenido-principal
        h1 #{nombrePagina} - #{proyecto.nombre}

        form.agregar-tarea(action=`/proyectos/${proyecto.url}` method="POST")
            .campo
                label(for="tarea") Tarea:
                input.nombre-tarea(type="text" name = "tarea" placeholader = "Nombre de Tarea")
            .campo.enviar
                input.boton.nueva-tarea(type="submit" value = "Agregar")
        
        .listado-pendientes
            ul
                if tareas.length
                    each tarea in tareas
                        li.tarea(data-tarea = tarea.id)
                            p= tarea.tarea
                            .acciones
                                if tarea.estado
                                    i.far.fa-check-circle.completo
                                else 
                                    i.far.fa-check-circle
                                i.fas.fa-trash
                else
                    p no hay tareas en esta asignatura



        // Acciones que se pueden hacer

        //-pre= vardump(tareas)

        .contenido-acciones
            a(href = `/proyecto/editar/${proyecto.id}` class = "boton") Editar Proyecto
            button#eliminar-proyecto(data-proyecto-url = proyecto.url type = "button" class = "boton eliminar") Eliminar Proyecto


